int main (void){
	/* AcÃ¡ pueden realizar sus propias pruebas */
  assert(alternate_sum_4(8,2,5,1) == 10);	
  assert(alternate_sum_4(8,2,5,2) == 9);	
  assert(alternate_sum_4_using_c(8,2,5,1) == 10);	
  assert(alternate_sum_4_using_c(8,2,5,2) == 9);	
